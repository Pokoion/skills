<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Range Explanations</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .leaderboard-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .leaderboard-section h3 {
            text-align: left;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            margin-top: 20px;
        }

        .leaderboard-section table {
            margin: 0 auto;
            border-collapse: collapse;
            width: 100%;
            max-width: 600px;
        }

        .range-explanation {
            margin: 0 auto;
            max-width: 600px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #a8a1a1;
            white-space: nowrap;
        }
        td:first-child {
            width: 50%;
        }
        td:nth-child(2) {
            width: 25%;
            text-align: center;
            background-color: white;
        }
        td:last-child {
            width: 25%;
            text-align: center;
        }
        td img {
            width: 32px;
            height: auto;
            vertical-align: middle;
            display: inline-block;
        }
        thead th{
            background-color: rgb(148, 143, 143);
            text-decoration: bold;
        }
        h1 {
            margin-top: 40px;
        }
        h3 {
            text-align: left; 
        }

    </style>
</head>
<body>
    <%- include('partials/username-display') %>
      <h1>Leaderboard</h1>
      <% badges.forEach(function(badge) { %>
        <div class="leaderboard-section">
          <h3><%= badge.name %></h3>
          <table>
            <thead>
              <tr>
                <th style="text-align: left;"><b>Rank</b></th>
                <th style="text-align: left;"><b>Username</b></th>
                <th style="text-align: left;"><b>Score</b></th>
                <th style="text-align: left;"><b>Badge</b></th>
                <th style="text-align: left;"><b>Range</b></th>
              </tr>
            </thead>
            <tbody>
                <% 
                const filteredUsers = users
                  .filter(user => user.score >= badge.bitpoints_min && user.score <= badge.bitpoints_max)
                  .sort((a, b) => b.score - a.score); 
                %>
                
                <% if (filteredUsers.length === 0) { %>
                  <tr>
                    <td colspan="5">No users in this range yet.</td>
                  </tr>
                <% } else { %>
                  <% filteredUsers.forEach((user, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= user.username %></td>
                      <td><%= user.score %></td>
                      <td style="background-color: white;"><img src="/badges/<%= badge.image_url %>" alt="Badge"></td>
                      <td><%= badge.name %></td>
                    </tr>
                  <% }); %>
                <% } %>
            </tbody>
          </table>
        </div>
      <% }); %>

    <h1>Range Explanations</h1>
    <div class="range-explanation">
    <table>
        <thead>
            <tr>
                <th style="text-align: left;"><b>Range</b></th>
                <th style="text-align: left;"><b>Badge</b></th>
                <th style="text-align: left;"><b>Required Bitpoints</b></th>
            </tr>
        </thead>
        <tbody>
            <% badges.forEach(function(badge) { %>
                <tr>
                    <td><%= badge.name %></td>
                    <td>
                        <img src="/badges/<%= badge.image_url %>">
                    </td>
                    <td><%= badge.bitpoints_min %> - <%= badge.bitpoints_max %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    </div>
</body>
</html>