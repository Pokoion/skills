<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Manage Users</title>
    <style>
        h1 {
            text-align: center;
            margin: 50px;
        }

        table {
            width: 20%;
            margin-left: auto;
            margin-right: auto;

        }

        h2 {
            text-align: center;
            margin: 25px;
        }

        b {
            margin-left: 40%;
        }

        .select-btn,
        .changePassButton {
            background-color: #3970e7;
        }

        .selected-btn {
            background-color: gray;
        }

        button {
            color: white;
            border: none;
            cursor: pointer;
            padding: 10px;
            border-radius: 4px;
            padding: 12px 15px;
        }

        .response-container {
            display: flex;
            justify-content: center;
        }
    </style>
</head>

<body>
    <%- include('partials/username-display') %>
        <h1>Manage Users</h1>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Admin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.admin %>
                        </td>
                        <td>
                            <button class="select-btn" id="select-btn"
                                onclick="selectUser('<%= user._id %>', this)">Change
                                Password</button>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <h2> Change Password</h2>
        <form id="changePassForm">
            <b> New Password: </b> <input type="password" id="newPassword" name="newPassword" required>
            <button class="changePassButton" id="changePassButton">Change Password</button>
        </form>
        <div class="response-container">
            <pre id="response"></pre>
        </div>
</body>
<script>
    let selectedUser = null;
    function selectUser(username, button) {
        selectedUser = username;
        console.log('Selected user:', selectedUser);

        const buttons = document.querySelectorAll('.select-btn');
        buttons.forEach(btn => {
            btn.classList.remove('selected-btn');
            btn.classList.add('select-btn');
        });
        button.classList.add('selected-btn');
    }

    document.getElementById('changePassForm').addEventListener('submit', function (event) {
        event.preventDefault();
        if (selectedUser) {
            const newPassword = document.getElementById('newPassword').value;
            console.log('Changing password for:', selectedUser, 'to:', newPassword);
            fetch('/admin/change-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ userId: selectedUser, newPassword: newPassword })
            })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('response').textContent = JSON.stringify(data, null, 2);
                })
                .catch(error => {
                    document.getElementById('response').textContent = error;
                });
        } else {
            console.error('No user selected');
            // TODO partial ejs error message
        }
    });
</script>

</html>