<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skill Tasks</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
        }

        .page-title {
            margin: 20px 0;
            font-size: 2rem;
            color: #333;
            text-align: center;
        }

        .trees {
            margin: 20px 0;
            font-size: 2rem;
            color: #333;
            text-align: left;
        }

        .skillsPage {
            width: 80%;
            max-width: 800px;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .svg-wrapper {
            margin: 20px auto;
        }

        textarea,
        button {
            width: 100%;
            max-width: 600px;
            margin: 10px auto;
            display: block;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            padding: 10px;
        }

        #approve-btn {
            background-color: #28a745;
        }
        #delete-btn {
            background-color: #dc3545;
        }
        #reject-btn {
            background-color: #6c757d;
        }
    </style>
</head>

<body>
    <%- include('partials/username-display') %>
    <h1 class="page-title">Skill: <%= text %></h1>
    <h2 class="trees">ELECTRONICS (68 skills)</h2>
    <!-- Skill informazioentzako orria -->
    <div class="skillsPage">

        <!-- Skill hexagonoa -->
        <div class="svg-wrapper" data-id="<%= id %>" data-custom="false">
            <svg width="100" height="100" viewBox="0 0 100 100">
                <polygon points="50,5 95,27.5 95,72.5 50,95 5,72.5 5,27.5" class="hexagon" />
                <text x="50%" y="20%" text-anchor="middle" fill="black" font-size="9">
                    <% text.split('\n\n\n').forEach(line=> { %>
                        <tspan x="50%" dy="1.2em" font-weight="bold">
                            <%= line %>
                        </tspan>
                        <% }); %>
                </text>
                <image x="35%" y="60%" width="30" height="30" href="/icons/<%= icon %>" />
            </svg>
        </div>

    <form>
        <h3>Skill Text:</h3>
        <textarea name="evidence" id="evidence" rows="2" placeholder="<%= text %>"></textarea>

        <h3>Description:</h3>
        <textarea name="description" id="description" rows="2" placeholder="<%= description %>"></textarea>

        <h3>Tasks To Complete (one per line):</h3>
        <textarea name="tasks" id="tasks" rows="2"></textarea>

        <h3>Resources (one per line):</h3>
        <textarea name="resources" id="resources" rows="2"></textarea>

        <h3>Skill Score:</h3>
        <textarea name="score" id="score" rows="2" placeholder="1"></textarea>

        <h3>Upload Icon (30x30 png):</h3>
        <input type="file" id="myFile" name="filename">

        <button id="approve-btn">Save</button>
        <button id="reject-btn">Cancel</button>
        <button id="delete-btn">Delete Skill</button>
    </form>
    </div>
    <script src="/js/tasks.js"></script>
</body>

</html>
